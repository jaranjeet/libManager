<div class="my-container theme-showcase" role="main">
  <div class="my-jumbotron">
	<h4>Showing All Students</h4>
	<table class="table table-striped">
		<tr>
			<th>Id</th>
			<th>Roll Number</th>
			<th>Name of Student</th>
			<th>Class</th>
			<th>Phone Number</th>
			<th>Email</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<% @students.each do |student| %>
	 	<tr>
	 		<td><%= student.id %></td>
