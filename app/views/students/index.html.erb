		 	<td><%= student.name %></td>
		 	<td><%= student.class_%></td>
	 		<td><%= student.phone %></td>
	 		<td><%= student.email %></td>
	 		<td><%= link_to 'Show', student_path(student) %>
	 		<td><%= link_to 'Edit', edit_student_path(student)%></td>
	 		<td><%= link_to 'Delete', student_path(student), method: :delete, data:{confirm: 'Are you sure?'} %></td>
	 	</tr>
		<% end %>
	</table>
	<%= link_to 'Home', welcome_index_path %>  |
	<%= link_to 'Add New Student', new_student_path %>
	
   </div>
